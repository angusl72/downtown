<div class="cards">
  <% images.each_with_index do |image, i| %>
    <div id="carouselExampleIndicators<%= i %>" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
      </div>
      <div class="index-card">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% unless image.after_photo.key == nil %>
              <%= link_to (cl_image_tag image.after_photo.key, width: 330, height: 360, crop: :fill, gravity: "auto",class: "card-img-top", :alt=>"Street View Image for #{image.address}"), image_path(image) %>
            <% else %>
              <%= link_to (cl_image_tag ("prvluvb2arm6lhic2on9"), width: 330, height: 360, crop: :fill, gravity: "auto", class: "card-img-top"), image_path(image) %>
            <% end %>

            <div class="img-info">
              Enhanced
            </div>

            <div class="user-informations">
              <div class="user-avatar">
                <% unless image.user.profile_photo.key == nil %>
                <%= cl_image_tag image.user.profile_photo.key, style:"width:35px; height: 35px; border-radius:100%" %>
                <% else %>
                <%= image_tag "User-avatar.jpg",style:"width:35px; height: 35px; border-radius:100%" %>
                <%end %>
              </div>

              <div class="user-username">
                <%= image.user.username.capitalize %>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <% unless image.before_photo.key == nil %>
            <%= link_to (cl_image_tag (image.before_photo.key), width: 330, height: 360, crop: :fill, gravity: "auto", class: "card-img-top", :alt=>"Modified Street View Image for #{image.address}"), image_path(image)%>
            <% else %>
            <%= link_to (cl_image_tag ("prvluvb2arm6lhic2on9"), width: 330, height: 360, crop: :fill, gravity: "auto", class: "card-img-top"), image_path(image) %>
            <% end %>

            <div class="user-informations">
              <div class="user-avatar">
                <% unless image.user.profile_photo.key == nil %>
                <%= cl_image_tag image.user.profile_photo.key, style:"width:35px; height: 35px; border-radius:100%"%>
                <% else %>
                <%= image_tag "User-avatar.jpg",style:"width:35px; height: 35px; border-radius:100%"%>
                <%end %>
              </div>

              <div class="user-username">
                <%= image.user.username.capitalize %>
              </div>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  <% end %>
</div>
