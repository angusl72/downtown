<div class="cards">
  <% images.each_with_index do |image, i| %>
    <div id="carouselExampleIndicators<%= i %>" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
      </div>
      <div class="index-card">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% unless image.after_photo.key == nil %>
              <%= link_to (cl_image_tag image.after_photo.key, width: 450, height: 360, crop: :fill, gravity: "auto",class: "card-img-top", :alt=>"Street View Image for #{image.address}"), image_path(image) %>
            <% else %>
              <%= link_to (cl_image_tag ("prvluvb2arm6lhic2on9"), width: 450, height: 360, crop: :fill, gravity: "auto", class: "card-img-top"), image_path(image) %>
            <% end %>
            <div class="carousel-caption d-none d-md-block">
              <h5>After</h5>
            </div>
            <div class=card-options>
              <% image.options.sample(2).each do |option| %>
                <p class="img-tag-options"><%= option.capitalize %></p>
              <% end %>
            </div>
          </div>
          <div class="carousel-item">
            <% unless image.before_photo.key == nil %>
            <%= link_to (cl_image_tag (image.before_photo.key), width: 450, height: 360, crop: :fill, gravity: "auto", class: "card-img-top", :alt=>"Modified Street View Image for #{image.address}"), image_path(image)%>
            <% else %>
            <%= link_to (cl_image_tag ("prvluvb2arm6lhic2on9"), width: 450, height: 360, crop: :fill, gravity: "auto", class: "card-img-top"), image_path(image) %>
            <% end %>
            <div class="carousel-caption d-none d-md-block">
              <h5>Before</h5>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators<%= i %>" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  <% end %>
</div>
