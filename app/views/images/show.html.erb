<div class="container mb-5">
  <h1 class="text-center">images#show</h1>
  <div class="card">
    <div class="image w-50 m-3 rounded">
     <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      </div>
      <div class="card">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% unless @image.before_photo.key == nil %>
            <%= cl_image_tag @image.before_photo.key,width: 400, height: 650, crop: :fill, gravity: "auto", class: "card-img-top" %>
            <% else %>
            <%= cl_image_tag "prvluvb2arm6lhic2on9",width: 400, height: 650, crop: :fill, gravity: "auto", class: "card-img-top" %>
            <% end %>
          </div>
          <div class="carousel-item">
            <% unless @image.after_photo.key == nil %>
            <%= cl_image_tag @image.after_photo.key,width: 400, height: 650, crop: :fill, gravity: "auto", class: "card-img-top" %>
            <% else %>
            <%= cl_image_tag "prvluvb2arm6lhic2on9",width: 400, height: 650, crop: :fill, gravity: "auto", class: "card-img-top" %>
            <% end %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    </div>
    <div class="card-product">
      <div class="user-details m-3 rounded">
