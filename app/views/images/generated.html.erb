<div class="container-fluid image-fluid-container px-5">
  <div class="row m-2">
    <div class="col-12 col-md-8 mt-3">
      <%= render "imageslider" %>
    </div>
    <div class="col-12 col-md-4 mt-3">
      <div class="card side-card-color">
        <div class="card-body">
          <h5 class="card-title mb-3">Options</h5>
          <p class="card-text"><small class="text-muted"><i class="fa-solid fa-location-dot"></i> <%= @image.address %></small></p>
          <p class="card-text">This image has been modified using Stability AI. This process uses a trained neural network to produce variations that retain the overall features and characteristics of the original image while introducing subtle changes</p>
          <p class="card-text">If you would like to make this image private (only visible to you) select the checkbox below before saving</p>
          <% @image.options.each do |option| %>
            <p class="img-tag-options mt-2"><%= option.capitalize %></p>
          <% end %>
          <% if !@image.custom_option.blank? %>
            <p class="img-tag-options mt-2"><%= @image.custom_option %></p>
          <% end %>
          <div class="mt-2">
            <%= render "save_private_form", image: @image %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
