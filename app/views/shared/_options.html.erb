<%= simple_form_for @image do |f| %>
  <%= f.input :options, :label => "Select your design options",
              as: :check_boxes,
              input_html: { class: "tag-selector" },
              item_wrapper_class: 'tag-item',
              collection: Image::OPTIONS %>
  <%= f.input :options, placeholder: 'Enter a custom option', label: false %>
  <%= f.button :submit, 'Generate', class: "btn-primary" %>
<% end %>
