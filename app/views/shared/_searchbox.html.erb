        </div>
        <div class="col">
          <label for="img-3">
            <input id="img-3" type="radio" name="img-selection" value="img-4" checked>
              <%= image_tag("Generating_image.png", class: "rounded img-search", alt: "img-4") %>
          </label>
        </div>
      </div>
    </div>
    <div class="row d-flex text-center">
      <%= render "shared/options"%>
    </div>
    <button type="button" class="btn btn-primary">Generate</button>
  </div>
</div>
