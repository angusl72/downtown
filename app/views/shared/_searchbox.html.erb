        <div class="col">
          <label for="img-0">
            <input id="img-0" type="radio" name="img-selection" value="img-1" checked>
              <%= image_tag("Generating_image.png", class: "rounded img-search", alt: "img-1") %>
          </label>
        </div>
        <div class="col">
          <label for="img-1">
            <input id="img-1" type="radio" name="img-selection" value="img-2" checked>
