<div class="container search-box-container d-flex p-3 flex-column align-items-center rounded" data-controller="searchbox">
  <div class="row">
    <form class="form-inline mb-2">
      <input class="form-control me-2 navbar-form" type="search" placeholder="Type an address..." aria-label="Search">
    </form>
    <p>📍 988 Parramatta Rd, Sydney</p>
  </div>

  <div class="row text-center">
    <label class="mb-3">Select a base image</label>

    <div class="row d-flex mb-3">
      <div class="col-3">
        <label for="img-1">
          <input id="img-1" type="radio" name="img-selection" value="img-1" checked>
            <img src="https://images.unsplash.com/photo-1572120360610-d971b9d7767c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" class="rounded img-search" alt="img-1">
        </label>
      </div>
      <div class="col-3">
        <label for="img-2">
          <input id="img-2" type="radio" name="img-selection" value="img-2" checked>
            <img src="https://images.unsplash.com/photo-1572120360610-d971b9d7767c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" class="rounded img-search" alt="img-2">
        </label>
      </div>
      <div class="col-3">
        <label for="img-3">
          <input id="img-3" type="radio" name="img-selection" value="img-3" checked>
            <img src="https://images.unsplash.com/photo-1572120360610-d971b9d7767c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" class="rounded img-search" alt="img-3">
        </label>
      </div>
      <div class="col-3">
        <label for="img-4">
          <input id="img-4" type="radio" name="img-selection" value="img-4" checked>
            <img src="https://images.unsplash.com/photo-1572120360610-d971b9d7767c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" class="rounded img-search" alt="img-4">
        </label>
      </div>
    </div>
  </div>

  <div class="row d-flex text-center">
    <%= render "shared/options"%>
  </div>
  <button type="button" class="btn btn-primary">Generate</button>
</div>
